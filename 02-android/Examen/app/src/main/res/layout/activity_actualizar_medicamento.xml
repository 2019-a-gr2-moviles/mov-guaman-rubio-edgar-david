<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarMedicamentoActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtGramosIngerir" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombre" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtGramosIngerir"
            app:layout_constraintEnd_toEndOf="@+id/txtGramosIngerir" app:layout_constraintStart_toStartOf="@+id/txtGramosIngerir"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtComposicion" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre"
            app:layout_constraintEnd_toEndOf="@+id/txtNombre" app:layout_constraintStart_toStartOf="@+id/txtNombre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtUsadoPara"
            app:layout_constraintEnd_toEndOf="@+id/txtComposicion" app:layout_constraintStart_toStartOf="@+id/txtComposicion"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtComposicion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtfechaCaducidad"
            app:layout_constraintEnd_toEndOf="@+id/txtUsadoPara" app:layout_constraintStart_toStartOf="@+id/txtUsadoPara"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtUsadoPara"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumeroPastillas"
            app:layout_constraintEnd_toEndOf="@+id/txtfechaCaducidad" app:layout_constraintStart_toStartOf="@+id/txtfechaCaducidad"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtfechaCaducidad"/>
    <Button
            android:text="Actualizar Medicamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActualizarMedicamento" app:layout_constraintStart_toStartOf="@+id/txtNumeroPastillas"
            app:layout_constraintEnd_toEndOf="@+id/txtNumeroPastillas" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNumeroPastillas" app:layout_constraintHorizontal_bias="0.504"/>
    <Button
            android:text="Eliminar Medicamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEliminarMedicamento" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizarMedicamento"
            app:layout_constraintEnd_toEndOf="@+id/btnActualizarMedicamento"
            app:layout_constraintStart_toStartOf="@+id/btnActualizarMedicamento"/>
</android.support.constraint.ConstraintLayout>