<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtApellidos" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombres"
            app:layout_constraintEnd_toEndOf="@+id/txtNombres"
            app:layout_constraintStart_toStartOf="@+id/txtNombres" android:layout_marginStart="3dp"
            android:hint="Apellidos" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Aceptar"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAceptar"
            app:layout_constraintStart_toStartOf="@+id/txtTieneSeguro"
            app:layout_constraintEnd_toEndOf="@+id/txtTieneSeguro" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTieneSeguro" app:layout_constraintHorizontal_bias="0.512"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelar"
            app:layout_constraintStart_toStartOf="@+id/btnAceptar"
            app:layout_constraintEnd_toEndOf="@+id/btnAceptar" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btnAceptar"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombres" android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Nombres"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumeroHijos"
            android:hint="NÃºmero de Hijos"
            app:layout_constraintStart_toStartOf="@+id/txtFechaNacimiento"
            app:layout_constraintEnd_toEndOf="@+id/txtFechaNacimiento"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/txtFechaNacimiento"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtTieneSeguro"
            app:layout_constraintStart_toStartOf="@+id/txtNumeroHijos"
            app:layout_constraintEnd_toEndOf="@+id/txtNumeroHijos"
            app:layout_constraintTop_toBottomOf="@+id/txtNumeroHijos" android:hint="Tiene seguro?"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="76dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtFechaNacimiento"
            app:layout_constraintStart_toStartOf="@+id/txtApellidos" app:layout_constraintEnd_toEndOf="@+id/txtNombre"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtNombre"
            android:hint="Fecha de nacimiento"/>
</android.support.constraint.ConstraintLayout>