<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarMedicamentoActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombre"
            app:layout_constraintStart_toStartOf="@+id/txtGramosIngerir"
            app:layout_constraintEnd_toEndOf="@+id/txtGramosIngerir"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtGramosIngerir"
            android:hint="Nombre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtComposicion"
            app:layout_constraintStart_toStartOf="@+id/txtNombre" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre"
            app:layout_constraintEnd_toEndOf="@+id/txtNombre" android:hint="Composicion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtUsadoPara" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtComposicion"
            app:layout_constraintStart_toStartOf="@+id/txtComposicion"
            app:layout_constraintEnd_toEndOf="@+id/txtComposicion" android:hint="Usado para"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtfechaCaducidad"
            app:layout_constraintStart_toStartOf="@+id/txtUsadoPara"
            app:layout_constraintEnd_toEndOf="@+id/txtUsadoPara"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtUsadoPara"
            android:hint="Fecha de caducidad"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumeroPastillas" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtfechaCaducidad"
            app:layout_constraintStart_toStartOf="@+id/txtfechaCaducidad"
            app:layout_constraintEnd_toEndOf="@+id/txtfechaCaducidad" android:hint="Numero de pastillas"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtGramosIngerir" android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Gramos ingesta"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGuardar" app:layout_constraintStart_toStartOf="@+id/txtNumeroPastillas"
            app:layout_constraintEnd_toEndOf="@+id/txtNumeroPastillas" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNumeroPastillas" app:layout_constraintHorizontal_bias="0.496"/>
</android.support.constraint.ConstraintLayout>