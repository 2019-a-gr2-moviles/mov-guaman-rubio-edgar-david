<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActualizarActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtTieneSeguro"
            app:layout_constraintStart_toStartOf="@+id/txtNumeroHijos"
            app:layout_constraintEnd_toEndOf="@+id/txtNumeroHijos" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtNumeroHijos"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtFechaNacimiento" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtApellidos"
            app:layout_constraintStart_toStartOf="@+id/txtApellidos" app:layout_constraintEnd_toEndOf="@+id/txtApellidos"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtApellidos" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombres"
            app:layout_constraintStart_toStartOf="@+id/txtNombres" app:layout_constraintEnd_toEndOf="@+id/txtNombres"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombres" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEliminar" app:layout_constraintStart_toStartOf="@+id/txtTieneSeguro"
            app:layout_constraintEnd_toEndOf="@+id/txtTieneSeguro" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTieneSeguro" app:layout_constraintHorizontal_bias="0.496"/>
    <Button
            android:text="Actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActualizar" app:layout_constraintStart_toStartOf="@+id/btnEliminar"
            app:layout_constraintEnd_toEndOf="@+id/btnEliminar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnEliminar"/>
    <Button
            android:text="CREAR MEDICAMENTO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCrearJugador" app:layout_constraintStart_toStartOf="@+id/btnActualizar"
            app:layout_constraintEnd_toEndOf="@+id/btnActualizar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnActualizar"/>
    <Button
            android:text="GESTIONAR MEDICAMENTO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGestionarJugador" app:layout_constraintStart_toStartOf="@+id/btnCrearJugador"
            app:layout_constraintEnd_toEndOf="@+id/btnCrearJugador" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCrearJugador"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumeroHijos"
            app:layout_constraintStart_toStartOf="@+id/txtFechaNacimiento"
            app:layout_constraintEnd_toEndOf="@+id/txtFechaNacimiento" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFechaNacimiento"/>
    <Button
            android:text="MenÃº"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMenuRetorno" app:layout_constraintStart_toStartOf="@+id/btnGestionarJugador"
            app:layout_constraintEnd_toEndOf="@+id/btnGestionarJugador"
            app:layout_constraintTop_toBottomOf="@+id/btnGestionarJugador"/>
</android.support.constraint.ConstraintLayout>