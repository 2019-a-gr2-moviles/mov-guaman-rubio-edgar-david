<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarJugadorActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreCamiseta"
            app:layout_constraintStart_toStartOf="@+id/txtnumeroCamiseta"
            app:layout_constraintEnd_toEndOf="@+id/txtnumeroCamiseta"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtnumeroCamiseta"
            android:hint="Nombre del medicamento"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreJugador"
            app:layout_constraintStart_toStartOf="@+id/txtNombreCamiseta" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreCamiseta"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreCamiseta" android:hint="Composicion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtpoderEspecialDos" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreJugador"
            app:layout_constraintStart_toStartOf="@+id/txtNombreJugador"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreJugador" android:hint="Uso"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtfechaIngresoEquipo"
            app:layout_constraintStart_toStartOf="@+id/txtpoderEspecialDos"
            app:layout_constraintEnd_toEndOf="@+id/txtpoderEspecialDos"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtpoderEspecialDos"
            android:hint="Fecha de caducidad"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtGoles" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtfechaIngresoEquipo"
            app:layout_constraintStart_toStartOf="@+id/txtfechaIngresoEquipo"
            app:layout_constraintEnd_toEndOf="@+id/txtfechaIngresoEquipo" android:hint="Numero de pastillas"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtnumeroCamiseta" android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Gramos a ingerir"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGuardar" app:layout_constraintStart_toStartOf="@+id/txtGoles"
            app:layout_constraintEnd_toEndOf="@+id/txtGoles" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtGoles" app:layout_constraintHorizontal_bias="0.496"/>
</android.support.constraint.ConstraintLayout>