<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarMedicamentoActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtAnombreMedicamento"
            app:layout_constraintStart_toStartOf="@+id/txtAgramosIngerir"
            app:layout_constraintEnd_toEndOf="@+id/txtAgramosIngerir"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtAgramosIngerir"
            android:hint="Nombre del medicamento"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtAcomposicion"
            app:layout_constraintStart_toStartOf="@+id/txtAnombreMedicamento" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAnombreMedicamento"
            app:layout_constraintEnd_toEndOf="@+id/txtAnombreMedicamento" android:hint="Composicion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtAuso" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAcomposicion"
            app:layout_constraintStart_toStartOf="@+id/txtAcomposicion"
            app:layout_constraintEnd_toEndOf="@+id/txtAcomposicion" android:hint="Uso"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtAfechaCaducidad"
            app:layout_constraintStart_toStartOf="@+id/txtAuso"
            app:layout_constraintEnd_toEndOf="@+id/txtAuso"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtAuso"
            android:hint="Fecha de caducidad"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtAnumeroPastillas" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAfechaCaducidad"
            app:layout_constraintStart_toStartOf="@+id/txtAfechaCaducidad"
            app:layout_constraintEnd_toEndOf="@+id/txtAfechaCaducidad" android:hint="Numero de pastillas"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtAgramosIngerir" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Gramos a ingerir"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGuardar"
            app:layout_constraintEnd_toEndOf="@+id/txtAlongitud"
            app:layout_constraintStart_toStartOf="@+id/txtAlongitud" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAlongitud"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/txtAlatitud"
            app:layout_constraintEnd_toEndOf="@+id/txtAnumeroPastillas"
            app:layout_constraintStart_toStartOf="@+id/txtAnumeroPastillas" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAnumeroPastillas" android:hint="Latitud"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/txtAlongitud"
            app:layout_constraintEnd_toEndOf="@+id/txtAlatitud" app:layout_constraintStart_toStartOf="@+id/txtAlatitud"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtAlatitud"
            android:hint="Longitud"/>
</android.support.constraint.ConstraintLayout>