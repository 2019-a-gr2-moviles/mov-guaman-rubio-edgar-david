<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarMedicamentoActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreMedicamento"
            app:layout_constraintStart_toStartOf="@+id/txtGramosIngerir"
            app:layout_constraintEnd_toEndOf="@+id/txtGramosIngerir"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtGramosIngerir"
            android:hint="Nombre del medicamento"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtComposicion"
            app:layout_constraintStart_toStartOf="@+id/txtNombreMedicamento" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreMedicamento"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreMedicamento" android:hint="Composicion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtUso" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtComposicion"
            app:layout_constraintStart_toStartOf="@+id/txtComposicion"
            app:layout_constraintEnd_toEndOf="@+id/txtComposicion" android:hint="Uso"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtFechaCaducidad"
            app:layout_constraintStart_toStartOf="@+id/txtUso"
            app:layout_constraintEnd_toEndOf="@+id/txtUso"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtUso"
            android:hint="Fecha de caducidad"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumeroPastillas" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFechaCaducidad"
            app:layout_constraintStart_toStartOf="@+id/txtFechaCaducidad"
            app:layout_constraintEnd_toEndOf="@+id/txtFechaCaducidad" android:hint="Numero de pastillas"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtGramosIngerir" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Gramos a ingerir"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGuardar"
            app:layout_constraintEnd_toEndOf="@+id/txtLongitud"
            app:layout_constraintStart_toStartOf="@+id/txtLongitud" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLongitud"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtLatitud"
            app:layout_constraintEnd_toEndOf="@+id/txtNumeroPastillas"
            app:layout_constraintStart_toStartOf="@+id/txtNumeroPastillas" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNumeroPastillas" android:hint="Latitud"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtLongitud"
            app:layout_constraintEnd_toEndOf="@+id/txtLatitud" app:layout_constraintStart_toStartOf="@+id/txtLatitud"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtLatitud"
            android:hint="Longitud"/>
</android.support.constraint.ConstraintLayout>